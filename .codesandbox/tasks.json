{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install app Dependencies",
      "command": "yarn install --legacy-peer-deps"
    },
    {
      "name": "install api deps",
      "command": "cd api/ && yarn install --legacy-peer-deps"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "start-app-dev": {
      "name": "start",
      "command": "yarn start",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "build-api": {
      "name": "build",
      "command": "cd api/ && yarn run build",
      "runAtStart": true
    },
    "start-api": {
      "name": "start-api",
      "command": "cd api/ &&  yarn start",
      "runAtStart": true,
      "preview": {
        "port": 8000
      }
    },
    "build": {
      "name": "build app",
      "command": "yarn build"
    },
    "test": {
      "name": "test",
      "command": "npm test"
    },
    "eject": {
      "name": "eject",
      "command": "npm eject"
    },
    "start": {
      "name": "start",
      "command": "yarn start",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    }
  }
}
