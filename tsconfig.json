{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@images/*": ["src/assets/images/*"],
      "@layout/*": ["src/layout/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@redux/*": ["src/redux/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
