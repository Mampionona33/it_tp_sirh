{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@component/*": ["src/component/*"],
      "@views/*": ["src/views/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@scss/*": ["src/scss/*"],
      "@redux/*": ["src/redux/*"],
      "@layout/*": ["src/layout/*"]
    }
  },
  "include": ["src", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
